citHeader("To cite BGLR in publications use:")

bibentry(
    bibtype = "article",
    title = "Genome-Wide Regression and Prediction with the BGLR Statistical Package",
    author = c(
        person("Paulino", "Perez"),
        person("Gustavo", "de los Campos")
    ),
    journal = "Genetics",
    year = "2014",
    volume = "198",
    number = "2",
    pages = "483--495",
    textVersion = paste(
        "Perez, P., and de los Campos, G., 2014.",
        "Genome-Wide Regression and Prediction with the BGLR Statistical Package.",
        "Genetics 198 (2): 483-495."
    )
)

bibentry(
  bibtype = "article",
  title = "Multitrait Bayesian shrinkage and variable selection models with the BGLR-R package",
  author = c(
      person("Paulino", "Perez-Rodriguez"),
      person("Gustavo", "de los Campos")
  ),
  journal = "Genetics",
  year="2022",
  volume="222",
  number="1",
  pages="iyac112",
  textVersion=paste(
        "Perez-Rodriguez, P. and de los Campos, G. 2022.",
        "Multitrait Bayesian shrinkage and variable selection models with the BGLR-R package.", 
        "Genetics 222 (1): iyac112."               
  )
)

bibentry(
